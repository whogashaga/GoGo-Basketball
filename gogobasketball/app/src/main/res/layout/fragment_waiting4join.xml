<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/waiting_team_a_player2_seat"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/outline_team_a_seat"
        app:layout_constraintBottom_toBottomOf="@+id/waiting_team_a_player1_seat"
        app:layout_constraintStart_toEndOf="@+id/waiting_team_a_player1_seat"
        app:layout_constraintTop_toTopOf="@+id/waiting_team_a_player1_seat">

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/waiting_team_a_player1_seat"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/outline_team_a_seat"
        app:layout_constraintBottom_toTopOf="@+id/waiting_team_b_player1_seat"
        app:layout_constraintStart_toStartOf="parent">


        <ImageView
            android:id="@+id/waiting_team_a_player1_avatar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_placeholder" />

        <TextView
            android:id="@+id/waiting_team_a_player1_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:gravity="left"
            android:text="Player1"
            app:layout_constraintStart_toEndOf="@+id/waiting_team_a_player1_avatar"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/waiting_team_a_player1_gender"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@+id/waiting_team_a_player1_id"
            app:layout_constraintTop_toBottomOf="@+id/waiting_team_a_player1_id"
            app:srcCompat="@drawable/ic_female" />

        <ImageView
            android:id="@+id/waiting_team_a_player1_position"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="@+id/waiting_team_a_player1_gender"
            app:layout_constraintStart_toEndOf="@+id/waiting_team_a_player1_gender"
            app:layout_constraintTop_toTopOf="@+id/waiting_team_a_player1_gender"
            app:srcCompat="@drawable/ic_center_basketball" />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/waiting_team_b_player2_seat"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/outline_team_b_seat"
        app:layout_constraintBottom_toBottomOf="@+id/waiting_team_b_player1_seat"
        app:layout_constraintStart_toEndOf="@+id/waiting_team_b_player1_seat"
        app:layout_constraintTop_toTopOf="@+id/waiting_team_b_player1_seat">

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/waiting_team_a_player3_seat"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/outline_team_a_seat"
        app:layout_constraintBottom_toBottomOf="@+id/waiting_team_a_player2_seat"
        app:layout_constraintStart_toEndOf="@+id/waiting_team_a_player2_seat"
        app:layout_constraintTop_toTopOf="@+id/waiting_team_a_player2_seat">

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/waiting_referee_seat"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/outline_referee_seat"
        app:layout_constraintBottom_toBottomOf="@+id/waiting_team_a_player3_seat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/waiting_team_a_player3_seat"
        app:layout_constraintTop_toTopOf="@+id/waiting_team_a_player3_seat">

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/waiting_team_b_player3_seat"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/outline_team_b_seat"
        app:layout_constraintBottom_toBottomOf="@+id/waiting_team_b_player2_seat"
        app:layout_constraintStart_toEndOf="@+id/waiting_team_b_player2_seat"
        app:layout_constraintTop_toTopOf="@+id/waiting_team_b_player2_seat">

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/waiting_team_b_player1_seat"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/outline_team_b_seat"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/waiting_team_a_player1_seat">

    </android.support.constraint.ConstraintLayout>

    <ImageButton
        android:id="@+id/btn_waitingjoin_back_arrow"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@null"
        android:src="@drawable/ic_previous"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/radios_timer_selector"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/outline_radio_btn_timer"
        android:checkedButton="@+id/radios_timer_no"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@+id/waiting_referee_seat"
        app:layout_constraintStart_toStartOf="@+id/waiting_referee_seat"
        app:layout_constraintTop_toBottomOf="@+id/waiting_referee_seat">

        <RadioButton
            android:id="@+id/radios_timer_yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:layout_weight="1"
            android:background="@drawable/radio_background_timer"
            android:button="@null"
            android:gravity="center"
            android:text="@string/referee_yes"
            android:textColor="@color/black_3f3a3a"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/radios_timer_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="1dp"
            android:layout_weight="1"
            android:background="@drawable/radio_background_timer"
            android:button="@null"
            android:gravity="center"
            android:text="@string/referee_no"
            android:textColor="@color/black_3f3a3a"
            android:textSize="18sp" />
    </RadioGroup>

    <Spinner
        android:id="@+id/spinner_timer_selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:entries="@array/timer_list"
        android:prompt="@string/select_time"
        android:spinnerMode="dialog"
        app:layout_constraintStart_toStartOf="@+id/radios_timer_selector"
        app:layout_constraintTop_toBottomOf="@+id/radios_timer_selector" />

    <TextView
        android:id="@+id/text_timer_minutes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="分鐘"
        android:textColor="@color/black_3f3a3a"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/spinner_timer_selector"
        app:layout_constraintStart_toEndOf="@+id/spinner_timer_selector"
        app:layout_constraintTop_toTopOf="@+id/spinner_timer_selector" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="24dp"
        android:text="@string/game_start"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/waiting_team_b_player3_seat" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="@string/build_cancel"
        app:layout_constraintBottom_toBottomOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button"
        app:layout_constraintTop_toTopOf="@+id/button" />


</android.support.constraint.ConstraintLayout>