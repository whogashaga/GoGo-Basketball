<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dialog_change_id">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/layout_change_id"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/outline_looking4room_normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.465"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/text_comment_title"
            style="@style/Want2CreateRoomTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/border_want2create_room_topbar"
            android:gravity="center"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:text="請輸入新名稱"
            app:layout_constraintBottom_toTopOf="@+id/edit_change_id"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_change_id_no"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:background="@drawable/background_effect_btn_no"
            android:text="取消"
            android:textColor="@color/black_3f3a3a"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btn_change_id_yes"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_change_id" />

        <Button
            android:id="@+id/btn_change_id_yes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/background_effect_btn_yes"
            android:text="確認"
            android:textColor="@color/black_3f3a3a"
            app:layout_constraintBottom_toBottomOf="@+id/btn_change_id_no"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/btn_change_id_no"
            app:layout_constraintTop_toTopOf="@+id/btn_change_id_no" />

        <EditText
            style="@style/Want2CreateRoomTitle"
            android:id="@+id/edit_change_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="8dp"
            android:gravity="center"
            android:textSize="16dp"
            android:background="@drawable/border_want2create_room_topbar"
            android:inputType="textPersonName"
            android:text="New Name"
            app:layout_constraintBottom_toTopOf="@+id/btn_change_id_no"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_comment_title" />


    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>