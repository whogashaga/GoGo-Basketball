<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout_rank_child_referee">


    <Spinner
        android:id="@+id/spinner_rank_referee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:paddingStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v4.widget.SwipeRefreshLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/swipe_container_rank_referee"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_child_referee_rank_title">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_rank_child_referee"
            android:layout_width="0dp"
            android:layout_height="0dp" />

    </android.support.v4.widget.SwipeRefreshLayout>

    <android.support.constraint.Guideline
        android:id="@+id/rank_child_referee_guideline_v1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="67dp" />

    <android.support.constraint.Guideline
        android:id="@+id/rank_child_referee_guideline_v2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="79dp" />

    <TextView
        android:id="@+id/text_child_referee_rank_title"
        style="@style/RankChildTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:text="@string/rank_child_ranking_title"
        app:layout_constraintEnd_toStartOf="@+id/rank_child_referee_guideline_v1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner_rank_referee" />

    <TextView
        android:id="@+id/text_child_referee_user_title"
        style="@style/RankChildTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/rank_child_referee_title"
        app:layout_constraintBottom_toBottomOf="@+id/text_child_referee_rank_title"
        app:layout_constraintEnd_toStartOf="@+id/rank_child_referee_guideline_v2"
        app:layout_constraintStart_toStartOf="@+id/rank_child_referee_guideline_v1"
        app:layout_constraintTop_toTopOf="@+id/text_child_referee_rank_title" />

    <TextView
        android:id="@+id/text_child_referee_record_title"
        style="@style/RankChildTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/rank_child_record_title"
        app:layout_constraintBottom_toBottomOf="@+id/text_child_referee_user_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/rank_child_referee_guideline_v2"
        app:layout_constraintTop_toTopOf="@+id/text_child_referee_user_title" />

    <TextView
        android:id="@+id/text_rank_referee_introduction"
        style="@style/RankChildTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:text="@string/at_least_3_games"
        app:layout_constraintBottom_toBottomOf="@+id/spinner_rank_referee"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/spinner_rank_referee"
        app:layout_constraintTop_toTopOf="@+id/spinner_rank_referee" />

</android.support.constraint.ConstraintLayout>